@using ITS.Infrastructure.Global;
<div id="divAddCaseNotes" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    @using (Html.BeginForm(GlobalConst.Actions.CaseSearchSharedContoller.AddCaseNote, GlobalConst.Controllers.CaseSearchShared, FormMethod.Post, new
{
    @class = "form-horizontal",
    id = "frmAddCaseNotes",
    enctype = "multipart/form-data",
    data_bind = "ajaxForm:{ success: function(responseText, statusText, xhr, $form){ AddCaseNotesFormSuccess(responseText, statusText, xhr, $form); },beforeSubmit: CaseNotesFormBeforeSubmit, clearForm: true }"
}))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                ×</button>
            <h3 id="myModalLabel">
                Add New Case Note</h3>
        </div>
        <div class="modal-body">
            <div class="control-group">
                <label class="control-label-1" for="input01">
                    <span style="color: Red">*</span>Note:
                </label>
                <div class="controls-1">
                    <textarea rows="5" name="Note" class="span12" cols="4" required></textarea>
                    <input type="hidden" name="CaseID" data-bind="value: CaseID" />
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button id="btnClinicalSave" type="submit" class="btn btn-primary">
                Add</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">
                Close</button>
        </div>
    }
</div>
 

