    @using (Html.BeginForm(GlobalConst.Actions.FileController.GeneratedPatientReferrerToSupplierLetter, GlobalConst.Controllers.File, new { area = "" }, FormMethod.Post, new { id = "frmGenerateLetters" }))
    {
