@using (Html.BeginForm(ITS.Infrastructure.Global.GlobalConst.Actions.InvoiceController.AddCollectionAction, ITS.Infrastructure.Global.GlobalConst.Controllers.Invoice, FormMethod.Post, new
{
    id = "frmAddCollectionAction",
    @class = "form-horizontal",

    data_bind = "ajaxForm:{ success: function(responseText, statusText, xhr, $form){ AddCollectionActionSuccess(responseText, statusText, xhr, $form); }, beforeSubmit: AddCollectionActionFormBeforeSubmit,clearForm:true }"
}))
{
                               
    <div class="control-group">
        <label class="control-label">
            Action:</label>
        <div class="controls">
        <textarea name="Action" placeholder="Action" required ></textarea>
           
            <input type="hidden" name="InvoiceID" data-bind="value:InvoiceID" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            Follow Up Date:</label>
        <div class="controls">
            <input type="text" id="FollowUpDate" name="FollowUpDate" class="input-small datepicker" data-validation-regex-message="DD/MM/YYYY" data-validation-regex-regex="^(0[1-9]|[12][0-9]|3[01])[- /.](0[1-9]|1[012])[- /.](19|20)\d\d+$" placeholder="FollowUpDate"
                data-bind="datepicker: { autoclose: true,format: 'dd/mm/yyyy' },jqBootstrapValidation: {}"
                required />
        </div>
    </div>
    					
    <div class="form-actions">
        <div class="column-groups-button">
            <button id="btnSave" type="submit" class="btn btn-primary btn-block">
                Save</button>
        </div>
        <div class="clear">
        </div>
    </div>
					
}
