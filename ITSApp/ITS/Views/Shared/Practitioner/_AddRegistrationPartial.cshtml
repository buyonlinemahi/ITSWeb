@using ITS.Infrastructure.Global;
<div id="divAddRegistration" class="modal hide fade" tabindex="-1" role="dialog"
    aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            ×</button>
        <h3 id="myModalLabel">
            Add New Registration</h3>
    </div>
    @using (Html.BeginForm(GlobalConst.Actions.PractitionerSharedController.AddRegistration, GlobalConst.Controllers.PractitionerShared, FormMethod.Post, new
{

    @class = "form-horizontal",
    id = "frmAddPractitionerRegistration",
    data_bind = "ajaxForm:{ success: function(responseText, statusText, xhr, $form){ AddRegistrationFormSuccess(responseText, statusText, xhr, $form); }, beforeSubmit: AddPractitionerRegistrationFormBeforeSubmit, clearForm: true }"
}))
    {
        <div class="modal-body">
            <div class="control-group">
                <label class="control-label" for="input01">
                    <span style="color: Red">*</span>Registration Number
                </label>
                <div class="controls">
                    <input type="text" class="input-xlarge" placeholder="Registration Number" name="RegistrationNumber"
                           data-bind="jqBootstrapValidation: {}" required />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="input01">
                    <span style="color: Red">*</span>Qualification
                </label>
                <div class="controls">
                    <input type="text" class="input-xlarge" placeholder="Qualification" name="Qualification"
                           data-bind="jqBootstrapValidation: {}" required />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="input01">
                    <span style="color: Red">*</span>Qualification Date
                </label>
                <div class="controls">
                    <input type="text" name="QualificationDate" class="datepicker" data-validation-regex-message="DD/MM/YYYY" data-validation-regex-regex="^(0[1-9]|[12][0-9]|3[01])[- /.](0[1-9]|1[012])[- /.](19|20)\d\d+$"  data-bind="jqBootstrapValidation: {},value:QualificationDate ,datepicker: { autoclose: true,format:'dd/mm/yyyy' }" required />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="input01">
                    <span style="color: Red">*</span>Expiry Date
                </label>
                <div class="controls">
                    <input type="text" name="ExpiryDate" class="datepicker" data-validation-regex-message="DD/MM/YYYY" data-validation-regex-regex="^(0[1-9]|[12][0-9]|3[01])[- /.](0[1-9]|1[012])[- /.](19|20)\d\d+$" data-bind="jqBootstrapValidation: {}, datepicker: { autoclose: true,format:'dd/mm/yyyy' }" required />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="input01">
                    Years Qualified
                </label>
                <div class="controls">
                    <input type="text" class="input-xlarge" name="YearsQualified" data-bind="value:YearsQualified" readonly />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="input01">
                    <span style="color: Red">*</span>Treatment Category
                </label>
                <div class="controls">
                    <select name="TreatmentCategoryID" data-bind="options:TreatmentCategories, 
                                                            optionsValue:'TreatmentCategoryID',
                                                            optionsText:'TreatmentCategoryName',
                                                            optionsCaption: 'Choose...',
                                                            value:selectedTreatmentCategoryId,
                                                            jqBootstrapValidation: {}" required></select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="input01">
                    <span style="color: Red">*</span>Registration Type
                </label>
                <div class="controls">
                    <select name="RegistrationTypeID" data-bind="options:RegistrationTypes, 
                                                            optionsValue:'RegistrationTypeID',
                                                            optionsText:'RegistrationTypeName',
                                                            optionsCaption: 'Choose...',
                                                            jqBootstrapValidation: {}" ></select>
                </div>
            </div>
            <input type="hidden" name="PractitionerID" data-bind="value:PractitionerID"/>
            
        </div>
        <div class="modal-footer">
                <button id="btnSave" type="submit" class="btn btn-primary">
                            Save</button>
                <button class="btn" data-dismiss="modal" aria-hidden="true">
                    Close</button>
            </div>
    }
</div>
