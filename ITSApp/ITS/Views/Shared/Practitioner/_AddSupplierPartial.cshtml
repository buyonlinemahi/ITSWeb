@using ITS.Infrastructure.Global
<div id="divAddSupplier" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            ×</button>
        <h3 id="myModalLabel">
            Add New Supplier</h3>
    </div>
    @using (Html.BeginForm(GlobalConst.Actions.PractitionerSharedController.AddSupplierPractitioner,
        GlobalConst.Controllers.PractitionerShared,
        FormMethod.Post, new
        {

            @class = "form-horizontal",
            id = "frmAddSupplierPractitioner",
            data_bind = "ajaxForm:{ success: function(responseText, statusText, xhr, $form){ AddSupplierPractitionerFormSuccess(responseText, statusText, xhr, $form); }, beforeSubmit: AddSupplierPractitionerFormBeforeSubmit, clearForm: true }"
        }))
    {
        <div class="modal-body">
            <div class="control-group">
                <label class="control-label" for="input01">
                    <span style="color: Red">*</span>Suppliers
                </label>
                <div class="controls">
                    <select name="SupplierID" data-bind="options:Suppliers, 
                                                        optionsValue:'SupplierID',
                                                        optionsText:'SupplierName',
                                                        optionsCaption:'Choose...',
                                                        value:SelectedSupplierID, jqBootstrapValidation: {}" required>
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="input01">
                    <span style="color: Red">*</span>Practitioners Registration
                </label>
                <div class="controls">
                    <select name="PractitionerRegistrationID" data-bind="options:PractitionerRegistrations, 
                                                        optionsValue:'PractitionerRegistrationID',
                                                        optionsText:'RegistrationNumber',
                                                        optionsCaption:'Choose...',
                                                        value:SelectedPractitionerRegistrationID, jqBootstrapValidation: {}" required>
                    </select>
                </div>
            </div>
            <input type="hidden" name="SupplierName" data-bind="value:SupplierName" />
            <input type="hidden" name="RegistrationNumber" data-bind="value:RegistrationNumber" />
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary" >
                    Save</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">
                Close</button>
        </div>
    }
</div>
