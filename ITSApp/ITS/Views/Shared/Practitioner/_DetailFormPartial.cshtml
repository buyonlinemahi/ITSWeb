@using ITS.Infrastructure.Global
@using (Html.BeginForm(GlobalConst.Actions.PractitionerSharedController.UpdatePractitioner,
                                           GlobalConst.Controllers.PractitionerShared,
                                           FormMethod.Post,
                                           new
                                               {
                                                   id = "frmDetailPractitioner",
                                                   @class = "form-horizontal",
                                                   data_bind = "ajaxForm:{ success: function(responseText, statusText, xhr, $form){ UpdatePractitionerFormSuccess(responseText, statusText, xhr, $form); } , beforeSubmit: UpdatePractitionerDetailFormBeforeSubmit }"
                                               }
                        ))
{
    <div class="control-group">
        <label class="control-label">
            Firstname:</label>
        <div class="controls">
            <input type="text" name="PractitionerFirstName" placeholder="John" data-bind="value:PractitionerFirstName"
                required />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            Lastname:</label>
        <div class="controls">
            <input type="text" name="PractitionerLastName" placeholder="Doe" data-bind="value:PractitionerLastName"
                required />
        </div>
    </div>
    <div class="control-group">
        <!--<label class="control-label">Areas of expertise</label>-->
        <label class="control-label">
            Areas of expertise</label>
        <!--<div class="span1"></div>-->
        <!--<div class="span11">-->
        <div class="controls controls-row">
            <div class="controls span3">
                <!-- ko foreach:AreasofExpertise.slice(0,5) -->
                <label class="checkbox">
                    <input type="checkbox" name="AreaofExpertiseIDs" data-bind="value:AreasofExpertiseID,checked:IsSelected" />
                    <span data-bind="text:AreasofExpertiseName"></span>
                </label>
                <!-- /ko -->
            </div>
            <div class="controls span3">
                <!-- ko foreach:AreasofExpertise.slice(5,10) -->
                <label class="checkbox">
                    <input type="checkbox" name="AreaofExpertiseIDs" data-bind="value:AreasofExpertiseID,checked:IsSelected" />
                    <span data-bind="text:AreasofExpertiseName"></span>
                </label>
                <!-- /ko -->
            </div>
            <div class="controls span4">
                <!-- ko foreach:AreasofExpertise.slice(10,15) -->
                <label class="checkbox">
                    <input type="checkbox" name="AreaofExpertiseIDs" data-bind="value:AreasofExpertiseID,checked:IsSelected" />
                    <span data-bind="text:AreasofExpertiseName"></span>
                </label>
                <!-- /ko -->
            </div>
            <div class="clear">
            </div>
        </div>
        <!--</div>-->
    </div>
    <input type="hidden" name="PractitionerID" data-bind="value:PractitionerID" />
    <div class="form-actions">
        <div class="column-groups-button">
            <button id="btnSave" type="submit" class="btn btn-primary btn-block" data-bind="bootstrapButton : DisableUpdateButton"
                data-loading-text="Saving...">
                Update</button>
        </div>
        <div class="clear">
        </div>
    </div>
}