@using ITS.Infrastructure.Global;
<div id="divAddReferrerLocation" class="modal hide fade" tabindex="-1" role="dialog"
    aria-labelledby="myModalLabel" aria-hidden="true">
    @using (Html.BeginForm(GlobalConst.Actions.ReferrerSharedController.AddReferrerLocation, GlobalConst.Controllers.ReferrerShared, FormMethod.Post, new
{
    @class = "form-horizontal",
    id = "frmAddReferrerLocation",
    enctype = "multipart/form-data",
    data_bind = "ajaxForm:{ success: function(responseText, statusText, xhr, $form){ AddOfficeLocationSuccess(responseText, statusText, xhr, $form); },beforeSubmit: OfficeLocationFormBeforeSubmit, clearForm: true }"
}))
    {
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                ×</button>
            <h3 id="myModalLabel">
                Add office Location</h3>
        </div>
        <div class="modal-body">
            <div class="control-group">
                <label class="control-label" for="input01">
                    Head Office?:
                </label>
                <div class="controls">
                    <label class="radio inline">
                        <input type="radio"  value="true" name="IsMainOffice" data-bind="jqBootstrapValidation: {}"
                            minchecked="1" data-validation-minchecked-message="Choose atleast one" />Yes
                    </label>
                    <label class="radio inline">
                        <input type="radio" value="false" name="IsMainOffice" data-bind="jqBootstrapValidation: {}" />No
                    </label>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="select01">
                    Location Name:</label>
                <div class="controls">
                    <input name="Name" type="text" class="input-file" data-bind="jqBootstrapValidation: {}"
                        required />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="select01">
                    Location Address:</label>
                <div class="controls">
                    <input name="Address" type="text" class="input-file" data-bind="jqBootstrapValidation: {}"
                        required />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="select01">
                    Location Town / City</label>
                <div class="controls">
                    <input name="City" type="text" class="input-file" data-bind="jqBootstrapValidation: {}"
                        required />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="select01">
                    Location Region</label>
                <div class="controls">
                    <input name="Region" type="text" class="input-file" data-bind="jqBootstrapValidation: {}"
                        required />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="select01">
                    Location Post Code:</label>
                <div class="controls">
                    <input name="PostCode" maxlength="8" type="text" style="text-transform:uppercase" onkeyup="javascript: postalCodeFormat(this)" class="input-file " data-bind="jqBootstrapValidation: {}"
                        required />
                </div>
            </div>
        </div>

        <input type="hidden" data-bind="value:ReferrerID" name="ReferrerID" />
        <input type="hidden" value="true"  name="IsActive" />

        <div class="modal-footer">
            <button id="btnClinicalSave" type="submit" class="btn btn-primary">
                Save changes</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">
                Close</button>
        </div>
    }
</div>
