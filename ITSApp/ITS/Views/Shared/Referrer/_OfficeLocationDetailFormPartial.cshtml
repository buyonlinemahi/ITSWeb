@using ITS.Infrastructure.Global;
@using (Html.BeginForm(GlobalConst.Actions.ReferrerController.Detail, GlobalConst.Controllers.Referrer, FormMethod.Post, new { id = "frmReferrerDetail", @class = "form-horizontal", data_bind = "" }))
{
    
    <div class="control-group">
        <label class="control-label">
            Head office Location Name</label>
        <div class="controls">
            <input type="text" name="Officelocation" data-bind="value:Name" readonly />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            Head office Address
        </label>
        <div class="controls">
            <input type="text" name="OfficeAddress" data-bind="value:Address" readonly />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            Head office Town / City</label>
        <div class="controls">
            <input type="text" name="City" data-bind="value:City" readonly />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            Head office Region</label>
        <div class="controls">
            <input type="text" name="Region" data-bind="value:Region" readonly />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            Head Office Postal Code</label>
        <div class="controls">
            <input type="text" name="PostCode" data-bind="value:PostCode" style="text-transform:uppercase" readonly />
        </div>
    </div>
       
@*
    No updating here. this will be done in the office location grid. updates will just reflect here.
    <div class="form-actions">
        <div class="column-groups-button">
            <button id="btnSave" type="submit" class="btn btn-primary btn-block" data-loading-text="Saving...">
                Update</button>
        </div>
        <div class="clear">
        </div>
    </div>
    *@
}