@using ITS.Infrastructure.Global;
@using (Html.BeginForm(GlobalConst.Actions.ReferrerProjectTreatmentSharedController.UpdateDocumentSetupProjectTreatment,
    GlobalConst.Controllers.ReferrerProjectTreatmentShared, 
    FormMethod.Post, new { id = "frmUpdateDocumentSet",
        @class = "form-horizontal",
                           data_bind = "ajaxForm: { success: function(responseText, statusText, xhr, $form){ UpdateDocumentSetupFormSuccess(responseText); }, beforeSubmit: UpdateDocumentSetupFormBeforeSubmit }"
    }))
{
   
<div class="form-horizontal">
    <div class="Header span12">
        <div class="HeaderTitle">
        </div>
        <div class="span12">
            <h5>
                Here you can control the actual documents that are generated by the software for
                the selected Referrer / Project / Treatment Type.
            </h5>
        </div>
    </div>
  <div class="clearfix"></div>
            <!-- ko foreach:ProjectTreatmentDocumentSetupResult -->
     <div class="control-group">
        <label class="control-label">
          <span data-bind="text:AssessmentServiceName"></span>
        </label>
        <div class="controls mrg-top3">
            <label class="radio inline">
                      <input type="radio"  value="1"
                       data-bind="checked:DocumentSetupTypeID, checkedValue:'1',attr:{name: '['+ $index() +  '].DocumentSetupTypeID',id:  $index() +  'Default'}"   />
               
            </label>
          
            Default
            <label class="radio inline">
               <input type="radio"  value="2"
                       data-bind="checked:DocumentSetupTypeID, checkedValue:'2',attr:{name: '['+ $index() +  '].DocumentSetupTypeID',id:  $index() +  'Custom'}"   />
                       

            </label> 
           
            Custom
             <div  style="display:none" data-bind="attr:{id:$index() +  'divAssessment'}" >            
             <input style="width:300px;"   data-bind="attr:{name: '['+ $index() +  '].AssesmentFile',id:  $index() +  'AssesmentFile'},jqBootstrapValidation:{}"  type="file" />
             <!-- ko if:UploadedFilePath==''-->
                <a style="margin-left:50px;" data-bind="attr:{id:  $index() +  'Download', href:'#'}" onclick='NofileUpload()'  class='UploadFileName'>No File Cho</a>
                <!--/ko-->
             <!-- ko notif:UploadedFilePath==''-->
                <a style="margin-left:50px;"data-bind="attr:{id:  $index() +  'Download' ,href: UploadedFilePath()},text:UploadedFileName" target='_blank' ></a>
                <!--/ko-->

            </div>
          
            
        </div>

        <input type="hidden" data-bind="attr: { name: '['+ $index() + '].AssessmentServiceName' },value:AssessmentServiceName" />
        <input type="hidden" data-bind="attr: { name: '['+ $index() + '].ReferrerProjectTreatmentID' },value:ReferrerProjectTreatmentID" />
          <input type="hidden" data-bind="attr: { name: '['+ $index() + '].AssessmentServiceID' },value:AssessmentServiceID" />
            <input type="hidden" data-bind="attr: { name: '['+ $index() + '].ReferrerProjectTreatmentDocumentSetupID' },value:ReferrerProjectTreatmentDocumentSetupID" />
    </div>
       <!--/ko-->
      <div class="modal-footer">
        <div class="column-groups-button">
     
               <button id="btnSave" type="submit" class="btn btn-primary" data-loading-text="Saving...">
                Update</button>
        </div>
        <div class="clear">
        </div>
    </div>  
</div>
    }
