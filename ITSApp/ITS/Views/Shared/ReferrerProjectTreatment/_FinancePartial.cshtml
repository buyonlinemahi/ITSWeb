@using ITS.Infrastructure.Global;
@using (Html.BeginForm(GlobalConst.Actions.ReferrerProjectTreatmentSharedController.UpdateReferrerProjectTreatment, GlobalConst.Controllers.ReferrerProjectTreatmentShared, FormMethod.Post, new { id = "frmUpdateProjectTreatmentFinance", @class = "form-horizontal", data_bind = "ajaxForm: { success: function(responseText, statusText, xhr, $form){ UpdateProjectTreatmentFinanceFormSuccess(responseText); }, beforeSubmit: UpdateProjectTreatmentFormBeforeSubmit }" }))
{
    <div class="control-group">
        <label class="control-label">
            Accounts Receivable Chasing Point:</label>
        <div class="controls">
            <div class="input-prepend span11">
                <span class="add-on">£</span>
                <input type="text" required="" data-bind="value:AccountReceivableChasingPoint ,jqBootstrapValidation: {}"
                    required data-validation-regex-regex="^(\d*\.\d{1,2}|\d+)$" data-validation-regex-message="Must be a number"  maxlength="4"
                    placeholder="0" name="AccountReceivableChasingPoint" />
            </div>
            <div class="help-block">
            </div>
        </div>
    </div>
    <div class="control-group">
        <input type="hidden" name="ReferrerProjectTreatmentID" data-bind="value:ReferrerProjectTreatmentID" />
        <input type="hidden" name="ReferrerProjectID" data-bind="value:ReferrerProjectID" />
        <input type="hidden" name="TreatmentCategoryID" data-bind="value:TreatmentCategoryID" />
        <input type="hidden" name="Enabled" data-bind="value:Enabled" /> 
        <label class="control-label">
            Accounts Receivable Collections:</label>
        <div class="controls">
            <div class="input-prepend span11">
                <span class="add-on">£</span>
                <input type="text" required="" data-bind="value:AccountReceivableCollection,jqBootstrapValidation: {}"
                    required data-validation-regex-regex="^(\d*\.\d{1,2}|\d+)$" data-validation-regex-message="Must be a number" maxlength="4"
                    placeholder="0" name="AccountReceivableCollection" />
            </div>
            <div class="help-block">
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <div class="column-groups-button">
            <button id="btnSave" type="submit" class="btn btn-primary">
                Update</button>
        </div>
        <div class="clear">
        </div>
    </div>
}
