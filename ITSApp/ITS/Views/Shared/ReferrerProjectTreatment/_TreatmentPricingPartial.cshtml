@using ITS.Infrastructure.Global;
@using (Html.BeginForm(GlobalConst.Actions.ReferrerProjectTreatmentSharedController.UpdateTreatmentCategoryPricing, GlobalConst.Controllers.ReferrerProjectTreatmentShared, FormMethod.Post, new { id = "frmUpdateTreatmentCategoryPricing", @class = "form-horizontal", data_bind = "ajaxForm: { success: function(responseText, statusText, xhr, $form){ UpdateTreatmentCategoryPricingFormSuccess(responseText,statusText); }, beforeSubmit: UpdateTreatmentCategoryPricingFormBeforeSubmit }" }))
{
   
    <!-- ko foreach:TreatmentPricing -->
   
    <div class="control-group">
        <label class="control-label" data-bind="text: PricingTypeName">
        </label>
        <div class="controls">
            <div class="input-prepend span11">
                <span class="add-on">£</span>
                <input type="text" class="input-large" data-bind="attr: { name: '['+ $index() + '].Price' }, value: Price, jqBootstrapValidation: {}"
                    required data-validation-regex-regex="^(\d*\.\d{1,2}|\d+)$" data-validation-regex-message="Must be a number" />
            </div>
            <input type="hidden" data-bind="attr: { name: '['+ $index() + '].PricingTypeID' }, value: PricingTypeID" />
            <input type="hidden" data-bind="attr: { name: '['+ $index() + '].PricingID' }, value: PricingID" />
            <input type="hidden" data-bind="attr: { name: '['+ $index() + '].ReferrerProjectTreatmentID' }, value:ReferrerProjectTreatmentID" />
            <div class="clear">
            </div>
        </div>
    </div>

    <!-- /ko -->
    <div class="modal-footer">
        <div class="column-groups-button">
            <button id="btnSave" type="submit" class="btn btn-primary">
                Update</button>
        </div>
        <div class="clear">
        </div>
    </div>
}
