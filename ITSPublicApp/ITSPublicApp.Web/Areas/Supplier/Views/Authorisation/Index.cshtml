<script src="@Url.Content("~/Scripts/viewmodels/areas/shared/supplier/AuthorisationViewModel.js")"
    type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/spin.min.js")" type="text/javascript"></script>
